<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/wallpaper" android:weightSum="1"
              android:id="@+id/layout"
        >

    <view android:layout_width="361dp"
          android:layout_height="335dp"
          class="com.epsi.puissance4.views.TestView" android:id="@+id/view" android:layout_gravity="center_horizontal"
            />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1">
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button" android:layout_weight="0.39"/>
        <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="New Button" android:id="@+id/button2"
                android:layout_weight="0.39"/>
    </LinearLayout>
</LinearLayout>
